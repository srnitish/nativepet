  .empty-cart .promo-message, .empty-cart .shop {
    color: #262626 !important;
  }

    .empty-cart-collection
    {
        display: block;
        height: 150px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
