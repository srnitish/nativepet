/* Side Cart Updates */
.rps-side-cart
{
    .cart-header
    {

        .progress
        {
            border: 1px solid $gold;
            border-radius: 100px;
            height: auto;

            span
            {
                height: 5px;
                background: $gold;
                display: block;
