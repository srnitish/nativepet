<script>
  


function calculateOff() {
  if($(window).width() > 769){
    var diff = (($(".pack-image").last().offset().top + $(".pack-image").last().height()) - ($(".pack-image").first().offset().top + $(".pack-image").first().height())) + parseFloat($(".pack-image").first().css('margin-top'));

    if (parseInt(diff) > 1) {
        $(".pack-image").first().css('margin-top', diff + 'px')
    } else if (diff < -1) {
        var diff2 = (($(".pack-image").first().offset().top + $(".pack-image").first().height()) - ($(".pack-image").last().offset().top + $(".pack-image").last().height())) + + parseFloat($(".pack-image").last().css('margin-top'));

        if (parseInt(diff2) > 1) {
            $(".pack-image").last().css('margin-top', diff2 + 'px')
        }
    }
  }else{
                $(".pack-image").css('margin-top', '0px')
  }
}
  
  $(function(){
    calculateOff();
//     $(window).scroll(function(){
//       calculateOff();
//     });
    $(window).resize(function(){
      calculateOff();
    });
  })
</script>
