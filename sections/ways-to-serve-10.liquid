{% unless section.settings.hide_section %}
<style>
	.our-ways-to-serve {
		background-color: {{ section.settings.bg_color }}
	}
	.divider--dotted--white {
		border-color: #0053A5 !important;
	}
	.our-ways-to-serve h2 {
		color: #0e498c !important;
	}
	.our-ways-to-serve .ways-to-serve-blocks .ways-to-serve-block .block-inner .block-meta h3 {
	    font-family: "NativePetHand","Airo",serif !important;
	    color: #0e498c !important;
	    font-size: 1.25em !important;
	}
	.our-ways-to-serve .ways-to-serve-blocks .ways-to-serve-block .block-inner .block-meta p {
	    color: #609ed5 !important;
	    text-transform: uppercase;
	}
	.our-ways-to-serve::after { display: none !important; }
</style>
   
{% include 'mod-ways-to-serve' %} 

{% endunless %}

{% schema %}
{
  "name": "Ways To Serve",
  "class": "ways-to-serve-section",
  "max_blocks": 3,
  "settings": [
        {
	      "type": "checkbox",
	      "id": "hide_section",
	      "label": "Hide section",
	      "default": false
	    },
        {
          "type": "text",
          "id": "section_title",
          "label": "Section title",
          "default": "Section title"
        },
        {
	      "type": "color",
          "id": "bg_color",
          "label": "Section Background Color",
          "default": "#FFF0DF"
        }
  ],
  "blocks": [
    {
      "type": "way-to-serve",
      "name": "Way to serve",
      "settings": [
        {
          "type": "image_picker",
          "id": "svg_url",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Text",
          "default": "<p>Text area can be used for details about blog authors or general information.</p>"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Ways To Serve",
    "category": "Content",
    "settings": {
    }
  }]
}
{% endschema %}
