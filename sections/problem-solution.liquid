{% comment %}
** Problem-Solution - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% comment %} Dynamic Section {% endcomment %}

<section class="product-ingredients" style="background-color: #fff;">
    <div class="container">
<!--         <div class="divider divider--dotted divider--dotted--cyan"></div> -->
        <div class="section-title" style="border-width: 0 !important;">
          <div class="icon-img">
            {% if section.settings.icon_image != blank %}
            <img src="{{ section.settings.icon_image | img_url:'master' }}" alt="" class="lazyload" >
            {% endif %}
     	 </div>     
        </div>
      

        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            <div class="product-ingredients__bottom">
<!--                 <div class="divider divider--dotted divider--dotted--cyan"></div> -->
                <div class="content-box">
                  <h2 class="problem">{{ block.settings.pretitle }}</h2>
                </div>
              	<div class="content-box sub-content">
                 {{ block.settings.detailed_description }}
                </div>
            </div>
          {% endfor %}
        {% endif %}
    </div>
</section>

{% schema %}
{
  "name": "Problem-Solution",
  "class": "Problem-Solution",
  "settings": [
	{
      "type": "image_picker",
      "id": "icon_image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "ingredient-block",
      "name": "Content",
      "settings": [
		 {
          "type": "text",
          "id": "pretitle",
          "label": "Preheading",
          "default": "Additional Benefits"
        },
        {
          "type": "richtext",
          "id": "detailed_description",
          "label": "Detailed description",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p><p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.</p>"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Problem-Solution",
    "category": "Content",
    "settings": {
    }
  }]
}
{% endschema %}

<style>
  .Problem-Solution .product-ingredients .container {
      align-items: center;
  }
  .Problem-Solution .product-ingredients__bottom {
      border-left: 2px dashed #0552a2;
      padding-left: 60px;
  }
  .Problem-Solution .content-box h2.problem{
      text-transform: uppercase;
      line-height: 40px;
      font-family: NativePetHand,Airo,serif!important;
  }
  .Problem-Solution .product-ingredients__bottom .content-box {
      margin: 15px auto;
  }
  .Problem-Solution .product-ingredients .section-title {
      padding-right: 60px;
  }
  .Problem-Solution .icon-img {
      text-align: center !important;
  }
  .Problem-Solution .product-ingredients__bottom .content-box p {
      text-align: left;
  }
  @media (max-width: 991px) {
    .Problem-Solution .product-ingredients__bottom .content-box p, 
    .Problem-Solution .content-box h2.problem {
        text-align: center;
        letter-spacing: 0;
    }
    .Problem-Solution .icon-img img {
        max-width: 350px;
    }
    .Problem-Solution .product-ingredients__bottom {
        border-left: 0;
        padding-left: 0;
        margin-top: 20px;
    }
  }
  @media (max-width: 480px) {
    .Problem-Solution .icon-img img {
        max-width: 70%;
    }
    .Problem-Solution .product-ingredients__bottom .content-box p {
        font-size: 18px;
    }
    .Problem-Solution .content-box h2.problem {
        font-size: 28px;
        line-height: 30px;
    }
  }
</style>
